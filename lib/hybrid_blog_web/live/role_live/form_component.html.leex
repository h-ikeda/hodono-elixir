<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "role-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :permissions %>
  <%= multiple_select f, :permissions, HybridBlog.Accounts.Role.permissions() %>
  <%= error_tag f, :permissions %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
